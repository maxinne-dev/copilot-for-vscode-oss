{
  "name": "copilot-for-vscode-oss",
  "displayName": "Copilot for VSCode OSS",
  "description": "Copilot for VSCode OSS using GitHub Copilot SDK integration",
  "version": "1.0.0",
  "author": {
    "name": "Maxie Homrich",
    "url": "https://github.com/maxinne-dev"
  },
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxinne-dev/copilot-for-vscode-oss"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Chat"
  ],
  "activationEvents": [
    "onView:copilot-oss.sidebar",
    "onCommand:copilot-oss.newSession",
    "onCommand:copilot-oss.clearHistory"
  ],
  "main": "./dist/extension.js",
  "l10n": "./locales",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "copilot-chat-container",
          "title": "%viewsContainers.title%",
          "icon": "media/ghcp.svg"
        }
      ]
    },
    "views": {
      "copilot-chat-container": [
        {
          "type": "webview",
          "id": "copilot-oss.sidebar",
          "name": "%views.chat.name%",
          "icon": "media/ghcp.svg"
        }
      ]
    },
    "configuration": {
      "title": "Copilot for VSCode OSS",
      "properties": {
        "copilot-oss.defaultModel": {
          "type": "string",
          "default": "gpt-4.1",
          "description": "%config.defaultModel.description%"
        }
      }
    },
    "commands": [
      {
        "command": "copilot-oss.newSession",
        "title": "%command.newSession.title%",
        "icon": "$(add)"
      },
      {
        "command": "copilot-oss.clearHistory",
        "title": "%command.clearHistory.title%",
        "icon": "$(clear-all)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:extension && npm run compile:webview",
    "compile:extension": "tsc -p ./tsconfig.json",
    "compile:webview": "npm run --prefix webview build",
    "watch": "tsc -watch -p ./tsconfig.json",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "dev": "concurrently \"npm run watch\" \"npm run --prefix webview dev\""
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^7.x",
    "@typescript-eslint/parser": "^7.x",
    "@vscode/test-electron": "^2.x",
    "concurrently": "^8.x",
    "eslint": "^8.x",
    "typescript": "^5.x"
  },
  "dependencies": {
    "@github/copilot-sdk": "^0.1.x",
    "@vscode/codicons": "^0.0.44"
  }
}